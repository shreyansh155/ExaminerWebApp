@{
    ViewData["Title"] = "Application Type Template";
}
<div id="add-template-page">

    <div class="card">
        <div class="d-flex row">
            <div class="d-inline-flex card-header justify-content-start align-items-end">
                <h3><strong>Application Type Templates</strong></h3>
                <h6 class="mx-2">Provides abilty to manage Application Type Templates</h6>
            </div>

        </div>

        <div class="card-body">
            <div id="grid"></div>
        </div>
    </div>

    <div id="displayModal"></div>
    <button id="refreshButton" type="button" hidden></button>

    <script src="~/js/app/application-type-template.js"></script>

    <script id="searchGrid" type="text/x-kendo-template">
        <div class="mt-3 row k-toolbar-item">
            <div class="col-12 form-group">
                <input type="search"
                       id="searchBox"
                       name="searchBox"
                       class="k-searchbox k-input k-input-md k-rounded-md k-input-solid"
                       required = "required"
                       placeholder = "Search for..."
                       style={margin:"auto"}
                       data-bind="value: search, valueUpdate: 'afterkeydown', attr: { 'aria-required': true }">
                </input>
            </div>
        </div>
    </script>

    <link rel="stylesheet" src="~/css/applicant-type-modal/style.css" />
</div>