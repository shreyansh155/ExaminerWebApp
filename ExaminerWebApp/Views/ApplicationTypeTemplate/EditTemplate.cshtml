@model ApplicationTypeTemplateModel;

@{
    var serializedData = Json.Serialize(Model);
}

<script type="text/javascript">
    window.initialData = @Html.Raw(serializedData);
</script>
<div>
    <form id="templateForm">
        <div id="errorBody" class="text-danger"></div>
        <div class="form-group">
            <label for="name">Name</label>
            <input id="name" name="name" data-bind="kendoMaskedTextBox: { value: name }" />
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input id="description" name="description" data-bind="kendoMaskedTextBox: { value: description }" />
        </div>
        <div class="form-group">
            <label for="description">Instruction</label>
            <textarea rows="1" id="instruction" name="description" data-bind="kendoEditor: { value: instruction }"></textarea>
        </div>
        <div class="justify-content-center align-items-center">
            <kendo-button name="submit-btn"
                          data-bind="click: submitTemplate"
                          theme-color="ThemeColor.Primary">
                Save
            </kendo-button>
            <kendo-button name="cancel-btn"
                          theme-color="ThemeColor.Light">
                Back
            </kendo-button>
            <kendo-button name="delete-btn"
                          theme-color="ThemeColor.Error">
                Delete
            </kendo-button>
        </div>
    </form>

    <div id="grid"></div>

    <div id="window"></div>

    <button id="refreshButton" type="button" hidden></button>
</div>

<script src="~/js/application-type-template/edit-template/edit.js"></script>
