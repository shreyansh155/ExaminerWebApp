@{
    Layout = "_Layout";
    ViewData["Title"] = "Phase";
}
<div class="app-content ">
    <!--begin::Container-->
    <div class="container-fluid mt-3">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card">
                    <div class="card-header"><h3>Phases</h3></div>

                    <div class="card-body">
                        <div id="grid"></div>
                        <div class="justify-content-center align-items-center" id="window"></div>
                        <div id="displayModal">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<button id="refreshButton" type="button" hidden></button>
<script id="custom-toolbar-template" type="text/x-kendo-template">
    <div>
      <button id="add" class='k-button k-button-md k-rounded-md k-button-solid k-button-primary k-button-solid-base'>
          <span class='k-button-text'>
              Add Phase
          </span>
      </button>
      <button id="expand" class='k-button k-button-md k-rounded-md k-button-solid k-button-primary k-button-solid-base'>
          <span class='k-button-text'>
              Expand All
          </span>
      </button>
      <button id="collapse" class='k-button k-button-md k-rounded-md k-button-solid k-button-primary k-button-solid-base'>
          <span class='k-button-text'>
              Collapse All
          </span>
      </button>
    </div>
</script>
<script src="~/js/phase/grid.js"></script>
